@font-face
  font-family FortescuePro-Bold
  src url(/fonts/FortescuePro-Bold.otf)

@font-face
  font-family transcript_bold
  src url(/fonts/transcript_bold.otf)

// Font Variables

$body = 'Averia Serif Libre', cursive
$display = 'FortescuePro-Bold', serif
$caption = 'transcript_bold', sans-serif

// Colours

$black = #222627
$gray = #9E9EA0
$cream = #F4F2EA
$white = #FFFFFF
$accent = #434EA0

@require './hljs.styl'

// Styling

body
  background-color #9E9EA0
  font-family $body
  margin 0
  color $black

  header
    height 750px

  a
    font-weight bold
    font-style italic
    color $black
    text-decoration none
    padding-bottom 2px
    border-bottom 2px solid $gray
    transition all 0.2s
    &:hover
      color $accent
      border-bottom 2px solid $accent

  h1.title
    font-family $display
    text-align center
    font-size 2rem
    letter-spacing 0.05rem
    &:after
      content " "
      width 75px
      height 2px
      display block
      margin 0 auto
      margin-top 50px
      margin-bottom 50px
      background-color $gray

  p
    font-size 1rem
    line-height 1.4rem
    letter-spacing 1px


  #error
    display none

  nav
    background-color $cream
    height 25px
    padding-top 25px
    position relative
    with 100%

    span
      display block
      margin 0 auto
      font-size 1.75rem
      text-align center

  #posts
    background-color $cream
    padding-bottom 50px

    .post
      max-width 650px
      margin 0 auto
      padding 20px

      .labels
        text-align center
        margin 50px 0

        span
          padding 5px 10px 4px 10px
          border 2px solid $black
          margin 5px
          font-family $caption
          text-transform uppercase
          font-size .7rem
          letter-spacing .09rem
          transition all 0.2s
          cursor default
          &:hover
            background-color $black
            color $cream

      .body
        h1
          text-align center
          font-size 1.25rem
          font-family $display
          letter-spacing 0.05rem
          margin 60px 20px 30px 20px

        pre
          code
            background-color $white
            display block
            padding 20px 5px
            margin 40px 20px

        p
          img
            max-width 650px
            border 10px solid $white
            display block
            margin 0 auto

        blockquote
          font-family $caption
          text-transform uppercase
          letter-spacing 0.05rem
          text-align center
          padding 10px 25px
          margin 40px
          line-height 26px

        ul
          margin 30px 0

      .user
        .avatar
          background-size cover
          width 75px
          height 75px
          border-radius 99em

      .summary
        text-align center
