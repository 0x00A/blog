@font-face
  font-family FortescuePro-Bold
  src url(/fonts/FortescuePro-Bold.otf)

@font-face
  font-family transcript_bold
  src url(/fonts/transcript_bold.otf)

// Font Variables

$body = 'Averia Serif Libre', cursive
$display = 'FortescuePro-Bold', serif
$caption = 'transcript_bold', sans-serif

@require './hljs.styl'

// Styling

body
  background-color #9E9EA0
  font-family $body
  margin 0
  color #222627

  h1.title
    font-family $display
    text-align center
    font-size 1.75rem

  p
    font-size 1rem
    line-height 1.25rem
    letter-spacing 1px

  #posts
    background-color #F4F2EA

    .post
      max-width 650px
      margin 0 auto
      padding 20px

      p
        img
          max-width 650px
          border 10px solid white

      blockquote
        font-family $caption
        text-transform uppercase
        letter-spacing 1px
        text-align center
        padding 20px
        line-height 26px

      .user
        .avatar
          background-size cover
          width 75px
          height 75px
          border-radius 99em
