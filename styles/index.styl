@font-face
  font-family FortescuePro-Bold
  src url(/fonts/FortescuePro-Bold.otf)

@font-face
  font-family transcript_bold
  src url(/fonts/transcript_bold.otf)

// Font Variables

$body = 'Averia Serif Libre', cursive
$display = 'FortescuePro-Bold', serif
$caption = 'transcript_bold', sans-serif

// Colours

$black = #222627
$gray = #9E9EA0
$cream = #F4F2EA
$white = #FFFFFF
$accent = #434EA0

@require './hljs.styl'

// Styling

body
  background-color #9E9EA0
  font-family $body
  margin 0
  color $black

  ::-moz-selection
    background $accent
    color $white
  ::selection
    background $accent
    color $white

  a
    color $black
    text-decoration none
    transition color 0.2s
    &:hover
      color $accent

  h1
    font-family $display
    text-align center

  header
    height 750px
    width 100%
    position relative

    .intro
      padding 30px
      box-sizing border-box
      width 320px
      height 380px
      border 1px solid $black
      position absolute
      top 50%
      left 50%
      transform translateY(-50%) translateX(-50%)
      text-align center

      p:nth-child(1)
        font-size 0.8rem
        margin 0
        letter-spacing 0.6rem
        text-transform uppercase

      p:nth-child(2)
        font-size 0.7rem
        letter-spacing 0.6rem
        text-transform uppercase
        margin 10px 10px 6px 10px

      p.first-line
        margin-top 25px
        font-size 0.75rem
        text-transform uppercase
        letter-spacing 0.1rem

      p:nth-child(5)
        font-size 0.7rem
        text-align left
        line-height 0.9rem

      p
        a
          font-style italic

      h2
        font-size 0.75rem
        font-weight normal
        text-transform uppercase
        letter-spacing 0.3rem
        margin-top 20px
        &:before
          content " "
          width 100%
          height 1px
          background-color $black
          display block
          margin 2px 0 20px 0
        a
          font-style normal

      h1
        margin 0
        font-size 3rem
        line-height 2.5rem

  h1.title
    font-size 2rem
    letter-spacing 0.05rem
    &:after
      content " "
      width 75px
      height 2px
      display block
      margin 0 auto
      margin-top 50px
      margin-bottom 50px
      background-color $gray

  p
    font-size 1rem
    line-height 1.4rem
    letter-spacing 1px


  #error
    display none

  nav
    background-color $cream
    height 25px
    padding-top 25px
    position relative
    with 100%

    span
      display block
      margin 0 auto
      font-size 1.75rem
      text-align center

  #posts
    background-color $cream
    padding-bottom 50px

    .post
      max-width 650px
      margin 0 auto
      padding 20px

      .labels
        text-align center
        margin 50px 0

        span
          padding 5px 10px 4px 10px
          border 2px solid $black
          margin 5px
          font-family $caption
          text-transform uppercase
          font-size .7rem
          letter-spacing .09rem
          transition all 0.2s
          cursor default
          &:hover
            border 2px solid $gray
            color $gray

      .body
        h1
          font-size 1.25rem
          letter-spacing 0.05rem
          margin 60px 20px 30px 20px

        a
          font-weight bold
          font-style italic
          padding-bottom 2px
          border-bottom 2px solid $gray
          &:hover
            border-bottom 2px solid $accent

        pre
          code
            background-color $white
            display block
            padding 20px 5px
            margin 40px 20px

        p
          img
            max-width 650px
            border 10px solid $white
            display block
            margin 0 auto

        blockquote
          font-family $caption
          text-transform uppercase
          letter-spacing 0.05rem
          text-align center
          padding 10px 25px
          margin 40px
          line-height 26px
          color $black

        ul
          margin 30px 0

      .summary
        position relative
        border 1px solid $black
        margin-top 50px
        margin-bottom 40px

        figure, .info
          display inline-table
          vertical-align middle

        figure
          text-align center
          height 100%
          border-right 1px solid $black
          padding-right 40px
          margin-right 0

        .info
          span
            display inline-table

          a.comments_url
            position absolute
            right 15px
            top 15px
            border-left 1px solid $black
            display inline-table
            padding 30px 10px 30px 30px
            text-align center

        .user
          .avatar
            background-size cover
            width 75px
            height 75px
            border-radius 99em

        .created_at, .updated_at
          margin 20px

        .created_at:before
          content "Date Created"
          display block
          font-family $caption
          text-transform uppercase
          font-size 0.8rem
          letter-spacing 0.05rem
          margin 10px

        .updated_at:before
          content "Date Updated"
          display block
          font-family $caption
          text-transform uppercase
          font-size 0.8rem
          letter-spacing 0.05rem
          margin 10px

        a.comments_url
          display block
